<#include "../inc/_layout.html"/>
<@layout>
<script>
$(function (){
	initQueryForm();
});
</script>
<div class="pageContent">
		<form method="post" action="${root!}/organization/save" id="articlefrom" class="pageForm required-validate"onsubmit="return validateCallback(this, dialogAjaxDone);">
			<input name="organization.id" type="hidden" value="${pojo.id!}">
			<div class="pageFormContent" id="articleSave" layoutH="55">
	<p>
		<label>
			编号
		</label>
		<input type="text" name="organization.num" value="${pojo.num!}" class="required">
	</p>
	<p>
		<label>
			机构名称
		</label>
		<input type="text" name="organization.name" value="${pojo.name!}" class="required">
	</p>
	<p>
		<label>
			地址
		</label>
		<input type="text" name="organization.addr" value="${pojo.addr!}">
	</p>
	<p>
		<label>
			备注
		</label>
		<textarea rows="5" name="organization.remark" cols="40">${pojo.remark!}</textarea>
	</p>
	
			</div>
			<div class="formBar">
				<ul>
					<li><div class="buttonActive">
							<div class="buttonContent">
								<button type="submit">保存</button>
							</div>
						</div></li>
					<li>
						<div class="button">
							<div class="buttonContent">
								<button type="Button" class="close">关闭</button>
							</div>
						</div></li>
				</ul>
			</div>
		</form>
	</div>
</@layout>